body-color=darken(white, 20%)
bg-color=darken(white, 5%)
text-color=lighten(black, 20%)
font-size=16px
onepx = (1/font-size)em

body, html
  *
    box-sizing border-box
  font-size font-size
  font-family arial, sans-serif
  margin 0
  min-height 100%
  display flex
  flex-direction column
  justify-content center
  align-items center
  background body-color
  app
    padding 1em 0
    background bg-color
    h1, a
      padding 0 1em
      color text-color
    a.feature
      color hue(darkblue, 5%)
      border-top onepx solid body-color
      text-decoration none
      display flex
      flex-direction column
      &:hover
        background lighten(body-color,30%)
      h2, p
        margin .5em 0
